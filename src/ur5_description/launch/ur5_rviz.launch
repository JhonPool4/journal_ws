<?xml version="1.0"?>
<launch>
	<!-- Paratemers of urdf of ur5 robot-->
	<arg name="limited" default="true" doc="If true, limits joint range [-PI, PI] on all joints." />
	<arg name="transmission_hw_interface" default="hardware_interface/PositionJointInterface" />

	<!-- Load urdf model-->
	<param name="robot_description" command="$(find xacro)/xacro --inorder '$(find ur5_description)/urdf/ur5_joint_limited_robot.urdf.xacro' transmission_hw_interface:=$(arg transmission_hw_interface)" />

	<!-- Call a service that show a gui to modify joint angles-->
	<node name="joint_state_publisher" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" output="screen" >
		<param name="joint_state_publisher_gui" value="true"/>
	</node>

	<!-- Publish robot state-->
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" />

	<!-- Open Rviz with config--> 
	<arg name="config_file" value="$(find ur5_description)/config/new_ur5.rviz"/>
	<node name="rviz" pkg="rviz" type="rviz" respawn="false" output="screen" args="-d$(arg config_file)"/>
</launch>
