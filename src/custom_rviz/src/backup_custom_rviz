    def update_figure(self, _):
        """
        self.line1.set_data(self.time_data, self.ep_data)
        self.line2.set_data(self.time_data, self.eo_data)
        self.line3.set_data(self.time_data, self.dddep_data)
        self.line4.set_data(self.time_data, self.dddeo_data)    
        """        
        self.line1.set_data(self.time_data, self.u1)
        self.line3.set_data(self.time_data, self.u2)
        self.line5.set_data(self.time_data, self.u3)

        self.line2.set_data(self.time_data, self.ep_data)
        self.line4.set_data(self.time_data, self.eo_data)
        self.line6.set_data(self.time_data, self.dddep_data)
        """
        self.line4.set_data(self.time_data, self.u4)
        self.line5.set_data(self.time_data, self.u5)
        self.line6.set_data(self.time_data, self.u6)
        """
        return self.line1, self.line2, self.line3, self.line4, self.line5, self.line6
        
    def update_data(self, msg):   
        self.time_data.append(msg.time)
        self.ep_data.append(1000*msg.ep)
        self.eo_data.append(1000*msg.eo)
        self.dddep_data.append(1000*msg.dddep)
        self.dddeo_data.append(msg.dddeo)

        self.u1.append(msg.alpha[0])
        self.u2.append(msg.alpha[1])
        self.u3.append(msg.alpha[2])
        self.u4.append(msg.alpha[3])
        self.u5.append(msg.alpha[4])
        self.u6.append(msg.alpha[5])

        self.ax1.set_ylim((min(self.u1),max(self.u1)))
        self.ax3.set_ylim((min(self.u2),max(self.u2)))
        self.ax5.set_ylim((min(self.u3),max(self.u3)))

        self.ax2.set_ylim((min(self.ep_data),max(self.ep_data)))
        self.ax4.set_ylim((min(self.eo_data),max(self.eo_data)))
        self.ax6.set_ylim((min(self.dddep_data),max(self.dddep_data)))
        
        
class MainWindow(QWidget):
    def __init__(self, parent=None):
        super(MainWindow, self).__init__(parent)

        # App main configuration: title and size
        self.title = 'Journal: Custom RViz'
        self.sg = QDesktopWidget().screenGeometry()
        self.setWindowTitle(self.title)
        self.setGeometry(0, 0, self.sg.width(), self.sg.height())

        # App description: widgets and layouts
        self.setLayout(QHBoxLayout())
        self.rviz_layout = QVBoxLayout()
        self.plots_layout = QVBoxLayout()

        self.layout().addLayout(self.rviz_layout,1)
        self.layout().addLayout(self.plots_layout,1)
        
        # configuration of RViz cameras
        cam0 = RvizCamera(camera_id=0)
        cam1 = RvizCamera(camera_id=1) 
        self.rviz_layout.addWidget(cam0.frame)
        self.rviz_layout.addWidget(cam1.frame)

        # Plot
        self.canvas = MplCanvas(self, dpi=100)
        self.plots_layout.addWidget(self.canvas)      

        # ros communication
        rospy.init_node('interface_node')
        #rospy.Subscriber("joint_states", JointState, self.update_figure)
        self.sub = rospy.Subscriber("cartesian_pose_error", CartesianPoseError, self.topic_callback)

    def topic_callback(self, msg):
        self.canvas.update_data(msg)
                


if __name__ == '__main__':
    app = QApplication(sys.argv)
    ex = MainWindow()
    ex.show()
    sys.exit(app.exec_())
